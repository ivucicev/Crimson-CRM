# OPENAI_API_KEY: Required for OpenAI API calls.
OPENAI_API_KEY="MY_OPENAI_API_KEY"

# OPENAI_MODEL: Optional model override.
OPENAI_MODEL="gpt-4o-mini"

# APP_URL: The URL where this applet is hosted.
# AI Studio automatically injects this at runtime with the Cloud Run service URL.
# Used for self-referential links, OAuth callbacks, and API endpoints.
APP_URL="MY_APP_URL"

# Email Configuration (Nodemailer)
# Configure these to enable sending emails directly from the CRM
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-password"
EMAIL_FROM="Crimson CRM <noreply@example.com>"

# SQLite database file location (optional)
# Default: ./data/crimson.db
DATABASE_PATH="./data/crimson.db"
